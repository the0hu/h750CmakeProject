{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Flash STM32",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f",
                "./openocd.cfg",
                "-c",
                "program build/target.hex",
                "-c",
                "reset run",
                "-c",
                "exit"
            ],
            "dependsOn": [
                "CMake: build"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cmake",
            "label": "CMake: build",
            "command": "build",
            "targets": [
                "all"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "CMake template build task"
        }
    ]
}